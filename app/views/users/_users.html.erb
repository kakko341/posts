<% if users.any? %>
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media-list">
        <div class="media-left">
          <% if user.image? %>
　　        <%= image_tag user.image.thumb.url, { size: 50 } %>
　        <% else %>
　　        <img class="media-object img-rounded　" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
　        <% end %>
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィールを見る', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>